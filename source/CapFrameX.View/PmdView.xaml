<UserControl x:Class="CapFrameX.View.PmdView"
             x:Name="PmdViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapFrameX.View"
             xmlns:prism="http://prismlibrary.com/"
			 xmlns:dragdrop="urn:gong-wpf-dragdrop"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 xmlns:mvvm="clr-namespace:CapFrameX.MVVM.Converter;assembly=CapFrameX.MVVM"
			 xmlns:proxy="clr-namespace:CapFrameX.MVVM;assembly=CapFrameX.MVVM"
             xmlns:controls="clr-namespace:CapFrameX.View.Controls"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignBackground}"
			 prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <ResourceDictionary>
            <mvvm:BoolToVisibilityConverter x:Key="TrueToVisibleConverter" FalseValue="Collapsed" TrueValue="Visible"/>
            <mvvm:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <!--Style="{StaticResource MaterialDesignOutlinedTextBox}"-->
        <ScrollViewer Grid.Row="0" Grid.Column="0" Margin="5 10 5 5" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="GPU Total Power" FontSize="18" Style="{DynamicResource MaterialDesignGroupBox}"
                          materialDesign:ColorZoneAssist.Mode="Custom"
                          materialDesign:ColorZoneAssist.Background="Black"
                          materialDesign:ColorZoneAssist.Foreground="White">
                    <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                        <materialDesign:PackIcon Foreground="Red" Margin="140 -55 0 0" Visibility="{Binding PmdMetrics.GpuPowerIncomplete, Converter={StaticResource TrueToVisibleConverter}}" 
                                                 Kind="Information" VerticalAlignment="Center" >
                            <materialDesign:PackIcon.ToolTip>
                                <TextBlock Text="Some needed power sources are missing for this metric to be accurate"/>
                            </materialDesign:PackIcon.ToolTip>
                        </materialDesign:PackIcon>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Cur"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllGpuPowerCur}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Avg"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllGpuPowerAvg}"/>
                        </StackPanel>
                        <StackPanel Margin="0 0 0 0" Orientation="Horizontal">
                            <Label Width="55" Height="28" FontSize="19" Content="Max"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllGpuPowerMax}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="PCIe Power" FontSize="17" Style="{DynamicResource MaterialDesignGroupBox}">
                    <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Cur"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllPciExCur}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Avg"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllPciExAvg}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="28" FontSize="19" Content="Max"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllPciExMax}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="PCIe Slot Power" FontSize="18" Style="{DynamicResource MaterialDesignGroupBox}">
                    <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Cur"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.PciExSlotCur}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Avg"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.PciExSlotAvg}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="28" FontSize="19" Content="Max"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.PciExSlotMax}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBox Text="{Binding GpuName, Mode=OneWay}" HorizontalAlignment="Center" IsReadOnly="True" IsHitTestVisible="False" 
                         Width="Auto" Height="30" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource MaterialDesignBody}"/>

                <controls:PlotViewCustomZoom Grid.Row="1" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" x:Name="PciExpressPlotView" 
                                         Model="{Binding PciExpressModel}" Tag="{Binding ElementName=PmdView, Path=DataContext}" Margin="0 10 0 10"
										 MouseDoubleClick="ResetPciExpressChart_MouseDoubleClick">
                    <controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                        <ControlTemplate>
                            <oxy:TrackerControl Position="{Binding Position}" Background="{DynamicResource MaterialDesignCardBackground}">
                                <oxy:TrackerControl.Content>
                                    <TextBlock Text="{Binding}" Margin="5" />
                                </oxy:TrackerControl.Content>
                            </oxy:TrackerControl>
                        </ControlTemplate>
                    </controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                </controls:PlotViewCustomZoom>
            </Grid>
        </Grid>
        <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="5 10 5 5" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="CPU Total Power" FontSize="18" Foreground="White" Style="{DynamicResource MaterialDesignGroupBox}">
                    <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Cur"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllCpuPowerCur}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Avg"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllCpuPowerAvg}"/>
                        </StackPanel>
                        <StackPanel Margin="0 0 0 0" Orientation="Horizontal">
                            <Label Width="55" Height="28" FontSize="19" Content="Max"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllCpuPowerMax}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="ATX Power" FontSize="18" Style="{DynamicResource MaterialDesignGroupBox}">
                    <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Cur"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllAtxPowerCur}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Avg"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllAtxPowerAvg}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="28" FontSize="19" Content="Max"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllAtxPowerMax}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="System Power" FontSize="18" Style="{StaticResource MaterialDesignGroupBox}"
                      materialDesign:ColorZoneAssist.Mode="Custom"
                      materialDesign:ColorZoneAssist.Background="Black"
                      materialDesign:ColorZoneAssist.Foreground="White">
                    <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                        <materialDesign:PackIcon Foreground="Red" Margin="120 -55 0 0" Visibility="{Binding PmdMetrics.SystemPowerIncomplete, Converter={StaticResource TrueToVisibleConverter}}" 
                                                 Kind="Information" VerticalAlignment="Center" >
                            <materialDesign:PackIcon.ToolTip>
                                <TextBlock Text="Some needed power sources are missing for this metric to be accurate"/>
                            </materialDesign:PackIcon.ToolTip>
                        </materialDesign:PackIcon>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Cur"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllPowerCur}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="30" FontSize="19" Content="Avg"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllPowerAvg}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Width="55" Height="28" FontSize="19" Content="Max"/>
                            <Label Width="90" Height="28" FontSize="19" Content="{Binding PmdMetrics.AllPowerMax}"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBox Text="{Binding CpuName, Mode=OneWay}" HorizontalAlignment="Center" IsReadOnly="True" IsHitTestVisible="False" 
                         Width="Auto" Height="30" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource MaterialDesignBody}"/>
                <controls:PlotViewCustomZoom Grid.Row="1" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" x:Name="EPS12VPlotView" 
                                         Model="{Binding EPS12VModel}" Tag="{Binding ElementName=PmdView, Path=DataContext}" Margin="0 10 0 10"
										 MouseDoubleClick="ResetEPS12VChart_MouseDoubleClick">
                    <controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                        <ControlTemplate>
                            <oxy:TrackerControl Position="{Binding Position}" Background="{DynamicResource MaterialDesignCardBackground}">
                                <oxy:TrackerControl.Content>
                                    <TextBlock Text="{Binding}" Margin="5" />
                                </oxy:TrackerControl.Content>
                            </oxy:TrackerControl>
                        </ControlTemplate>
                    </controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                </controls:PlotViewCustomZoom>
            </Grid>
        </Grid>
        <Button Grid.Row="2" Width="190" Height="40" Command="{Binding ResetPmdMetricsCommand}"
                Foreground="White" Background="{DynamicResource MaterialDesignToolBackground}">
            Reset PMD Metrics
        </Button>
    </Grid>
</UserControl>
