<UserControl x:Class="CapFrameX.View.PmdView"
             x:Name="PmdViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapFrameX.View"
             xmlns:prism="http://prismlibrary.com/"
			 xmlns:dragdrop="urn:gong-wpf-dragdrop"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 xmlns:mvvm="clr-namespace:CapFrameX.MVVM.Converter;assembly=CapFrameX.MVVM"
			 xmlns:proxy="clr-namespace:CapFrameX.MVVM;assembly=CapFrameX.MVVM"
             xmlns:controls="clr-namespace:CapFrameX.View.Controls"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignBackground}"
             Foreground="{DynamicResource MaterialDesignBody}"
			 prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <ResourceDictionary>
            <mvvm:BoolToVisibilityConverter x:Key="TrueToVisibleConverter" FalseValue="Collapsed" TrueValue="Visible"/>
            <mvvm:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
            <mvvm:PmdStatusColorConverter x:Key="PmdStatusColorConverter"/>
            <system:Double x:Key="FontSizeMetrics">17</system:Double>
            <system:Double x:Key="LabelHeight">28</system:Double>
            <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource MaterialDesignNavigationRailTabItem}">
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Background" Value="{DynamicResource MaterialDesignBody}"/>
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Height" Value="25" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TabControl x:Name="GraphTab" Margin="0 2 0 0" FocusVisualStyle="{x:Null}" Background="{DynamicResource MaterialDesignBackground}">
            <TabItem Width="100">
                <TabItem.Header>
                    <Label FontSize="12">PMD Metrics</Label>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="170"/>
                    </Grid.ColumnDefinitions>
                    <!--Style="{StaticResource MaterialDesignOutlinedTextBox}"-->
                    <ScrollViewer Grid.Row="0" Grid.Column="0" Margin="5 0 5 5" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <GroupBox Header="GPU Total Power" FontSize="17" Style="{DynamicResource MaterialDesignGroupBox}">
                                <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                                    <materialDesign:PackIcon Foreground="Red" Margin="140 -55 0 0" Visibility="{Binding PmdMetrics.GpuPowerIncomplete, Converter={StaticResource TrueToVisibleConverter}}" 
                                                 Kind="Information" VerticalAlignment="Center" >
                                        <materialDesign:PackIcon.ToolTip>
                                            <TextBlock Text="Some needed power sources are missing for this metric to be accurate"/>
                                        </materialDesign:PackIcon.ToolTip>
                                    </materialDesign:PackIcon>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Cur"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllGpuPowerCur}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Avg"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllGpuPowerAvg}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0 0 0 0" Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Max"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllGpuPowerMax}"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="PCIe Power" FontSize="17" Style="{DynamicResource MaterialDesignGroupBox}">
                                <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Cur"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllPciExCur}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Avg"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllPciExAvg}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Max"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllPciExMax}"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="PCIe Slot Power" FontSize="17" Style="{DynamicResource MaterialDesignGroupBox}">
                                <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Cur"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.PciExSlotCur}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Avg"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.PciExSlotAvg}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Max"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.PciExSlotMax}"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="0 0 0 0" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                                <TextBlock Text="{Binding GpuName, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" 
                                           FontWeight="Bold" FontSize="18"/>
                            </Grid>
                            <controls:PlotViewCustomZoom Grid.Row="1" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" x:Name="PciExpressPlotViewMetrics" 
                                         Model="{Binding PciExpressModel}" Tag="{Binding ElementName=PmdViewControl, Path=DataContext}" Margin="0 5 0 0"
										 MouseDoubleClick="ResetPciExpressChartMetrics_MouseDoubleClick">
                                <controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                                    <ControlTemplate>
                                        <oxy:TrackerControl Position="{Binding Position}" Background="{DynamicResource MaterialDesignCardBackground}">
                                            <oxy:TrackerControl.Content>
                                                <TextBlock Text="{Binding}" Margin="5" />
                                            </oxy:TrackerControl.Content>
                                        </oxy:TrackerControl>
                                    </ControlTemplate>
                                </controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                            </controls:PlotViewCustomZoom>
                        </Grid>
                    </Grid>
                    <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="5 5 5 5" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <GroupBox Header="CPU Total Power" FontSize="17" Foreground="White" Style="{DynamicResource MaterialDesignGroupBox}">
                                <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Cur"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllCpuPowerCur}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Avg"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllCpuPowerAvg}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0 0 0 0" Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Max"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllCpuPowerMax}"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="ATX Power" FontSize="17" Style="{DynamicResource MaterialDesignGroupBox}">
                                <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Cur"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllAtxPowerCur}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Avg"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllAtxPowerAvg}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Max"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllAtxPowerMax}"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="System Power" FontSize="17" Style="{StaticResource MaterialDesignGroupBox}">
                                <StackPanel Orientation="Vertical" Margin="0 -0 0 -0">
                                    <materialDesign:PackIcon Foreground="Red" Margin="120 -55 0 0" Visibility="{Binding PmdMetrics.SystemPowerIncomplete, Converter={StaticResource TrueToVisibleConverter}}" 
                                                 Kind="Information" VerticalAlignment="Center" >
                                        <materialDesign:PackIcon.ToolTip>
                                            <TextBlock Text="Some needed power sources are missing for this metric to be accurate"/>
                                        </materialDesign:PackIcon.ToolTip>
                                    </materialDesign:PackIcon>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Cur"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllPowerCur}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Avg"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllPowerAvg}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="55" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="Max"/>
                                        <Label Width="90" Height="{StaticResource LabelHeight}" FontSize="{StaticResource FontSizeMetrics}" Content="{Binding PmdMetrics.AllPowerMax}"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="0 5 0 0" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                                <TextBlock Text="{Binding CpuName, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" 
                                         FontWeight="Bold" FontSize="18"/>
                            </Grid>
                            <controls:PlotViewCustomZoom Grid.Row="1" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" x:Name="EPS12VPlotViewMetrics" 
                                         Model="{Binding EPS12VModel}" Tag="{Binding ElementName=PmdViewControl, Path=DataContext}" Margin="0 5 0 5"
										 MouseDoubleClick="ResetEPS12VChartMetrics_MouseDoubleClick">
                                <controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                                    <ControlTemplate>
                                        <oxy:TrackerControl Position="{Binding Position}" Background="{DynamicResource MaterialDesignCardBackground}">
                                            <oxy:TrackerControl.Content>
                                                <TextBlock Text="{Binding}" Margin="5" />
                                            </oxy:TrackerControl.Content>
                                        </oxy:TrackerControl>
                                    </ControlTemplate>
                                </controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                            </controls:PlotViewCustomZoom>
                        </Grid>
                    </Grid>
                    <Button Grid.Row="2" Margin="0 0 0 2" Width="190" Height="40" Command="{Binding ResetPmdMetricsCommand}"
                            Foreground="White" Background="{DynamicResource MaterialDesignToolBackground}">
                        Reset PMD Metrics
                    </Button>
                    <Grid Grid.Row="2" Grid.Column="1" Margin="0 0 0 2" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20 0 0 0">
                            <TextBlock Text="Start/Stop PMD" FontSize="14" VerticalAlignment="Center" Margin="0 0 0 0"/>
                            <ToggleButton Margin="10 0 0 0" IsChecked="{Binding UsePmdService}" Style="{StaticResource MaterialDesignSwitchToggleButton}"
                              ToolTipService.ShowDuration="25000">
                                <ToggleButton.ToolTip>
                                    <ToolTip MaxWidth="350">
                                        <TextBlock Text="Start or stop the PMD service."
                                       TextWrapping="Wrap"/>
                                    </ToolTip>
                                </ToggleButton.ToolTip>
                            </ToggleButton>

                            <TextBlock Text="COM Port" FontSize="14" VerticalAlignment="Center" Margin="30 0 0 0"/>
                            <ComboBox Margin="10 -20 0 0" Padding="0 10 0 0" FontSize="14" Style="{StaticResource MaterialDesignComboBox}"
					                  materialDesign:HintAssist.IsFloating="True" MaxDropDownHeight="150" Width="80" Height="40" materialDesign:HintAssist.HintOpacity=".8"
					                  ItemsSource="{Binding ComPortsItemsSource}" SelectedItem="{Binding SelectedComPort}" IsEnabled="{Binding IsComPortEnabled}"
                                      ToolTipService.ShowDuration="25000">
                                <ComboBox.ToolTip>
                                    <ToolTip MaxWidth="350">
                                        <TextBlock Text="Select the COM Port." 
                                       TextWrapping="Wrap"/>
                                    </ToolTip>
                                </ComboBox.ToolTip>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 20 0">
                            <TextBlock VerticalAlignment="Center" FontSize="14">PMD Service Status:</TextBlock>
                            <TextBlock Margin="10 0 0 0" Width="Auto" VerticalAlignment="Center" Text="{Binding PmdCaptureStatus, Converter={StaticResource EnumDescriptionConverter}}" 
                           FontWeight="Bold" FontSize="14" Foreground="{Binding PmdCaptureStatus, Converter={StaticResource PmdStatusColorConverter}}"/>
                        </StackPanel>
                    </Grid>
                    <!--PMD Options (right side menu)-->
                    <Grid Grid.RowSpan="3" Grid.Column="2" Margin="5 0 0 2" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Vertical">
                            <Border Height="45" Margin="5 5 5 0" BorderThickness="0.2" BorderBrush="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Stretch">
                                <CheckBox Margin="5 0 0 0" FontSize="13" Content="Log PMD Data" IsChecked="{Binding UseLogging}"></CheckBox>
                            </Border>
                            <Border Height="160" Margin="5 20 5 0" BorderThickness="0.2" BorderBrush="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Downsampling Factor" FontSize="13" HorizontalAlignment="Left" Margin="10 10 0 0"/>
                                    <ComboBox Margin="10 10 0 0" HorizontalAlignment="Left" Padding="0 0 0 0" FontSize="13" Style="{StaticResource MaterialDesignComboBox}"
					                          materialDesign:HintAssist.IsFloating="True" MaxDropDownHeight="150" Width="60" Height="30" materialDesign:HintAssist.HintOpacity=".8"
					                          ItemsSource="{Binding DownsamplingFactors}" SelectedItem="{Binding SelectedDownSamplingFactor}"
                                              ToolTipService.ShowDuration="25000">
                                        <ComboBox.ToolTip>
                                            <ToolTip StaysOpen="True" MaxWidth="275">
                                                <TextBlock Text="Sets the refresh rate [ms] for the PMD device." 
									   TextWrapping="Wrap"/>
                                            </ToolTip>
                                        </ComboBox.ToolTip>
                                    </ComboBox>
                                    <TextBlock Text="Downsampling Mode" FontSize="13" HorizontalAlignment="Left" Margin="10 20 0 0"/>
                                    <ComboBox Margin="10 10 0 0" HorizontalAlignment="Left" Padding="0 0 0 0" FontSize="13" Style="{StaticResource MaterialDesignComboBox}"
					                          materialDesign:HintAssist.IsFloating="True" MaxDropDownHeight="150" Width="100" Height="30" materialDesign:HintAssist.HintOpacity=".8"
					                          ItemsSource="{Binding DownsamplingModes}" SelectedItem="{Binding SelectedDownSamlingMode}"
                                              ToolTipService.ShowDuration="25000">
                                        <ComboBox.ToolTip>
                                            <ToolTip StaysOpen="True" MaxWidth="275">
                                                <TextBlock Text="Sets the downsampling mode." 
									   TextWrapping="Wrap"/>
                                            </ToolTip>
                                        </ComboBox.ToolTip>
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                            <Border Height="80" Margin="5 20 5 0" BorderThickness="0.2" BorderBrush="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Stretch">
                                <StackPanel>
                                    <TextBlock Text="Chart Length [s]" FontSize="13" HorizontalAlignment="Left" Margin="10 10 0 0"/>
                                    <ComboBox Margin="10 10 0 0" HorizontalAlignment="Left" Padding="0 0 0 0" FontSize="13" Style="{StaticResource MaterialDesignComboBox}"
					                          materialDesign:HintAssist.IsFloating="True" MaxDropDownHeight="150" Width="60" Height="30" materialDesign:HintAssist.HintOpacity=".8"
					                          ItemsSource="{Binding PmdDataWindows}" SelectedItem="{Binding SelectedPmdDataWindow}"
                                              ToolTipService.ShowDuration="25000">
                                        <ComboBox.ToolTip>
                                            <ToolTip StaysOpen="True" MaxWidth="275">
                                                <TextBlock Text="Sets the lenght [s] of the charts." 
									   TextWrapping="Wrap"/>
                                            </ToolTip>
                                        </ComboBox.ToolTip>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                            <Border Height="45" Margin="5 20 5 0" BorderThickness="0.2" BorderBrush="{DynamicResource MaterialDesignBody}" HorizontalAlignment="Stretch">
                                <CheckBox Margin="5 0 0 0" FontSize="13" Content="Show Charts" IsChecked="{Binding UpdateCharts}"></CheckBox>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Vertical">
                            <StackPanel Margin="5 0 0 0" Orientation="Horizontal">
                                <Label Content="Lost Packets:" FontSize="13"/>
                                <TextBlock Text="{Binding LostPackets}" Width="60" VerticalAlignment="Center" FontSize="13"/>
                            </StackPanel>
                            <StackPanel Margin="5 0 0 0" Orientation="Horizontal">
                                <Label Content="Sample Rate:" FontSize="13"/>
                                <TextBlock Text="{Binding SampleRate}" Width="60" VerticalAlignment="Center" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <!--PMD Analysis-->
            <TabItem Width="100">
                <TabItem.Header>
                    <Label FontSize="12">PMD Analysis</Label>
                </TabItem.Header>
                <Grid x:Name="AnalysisChartGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="210"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid Margin="0 0 0 0" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                                <TextBlock Text="{Binding SessionGpuName, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" 
                                         FontWeight="Bold" FontSize="18"/>
                            </Grid>
                            <controls:PlotViewCustomZoom Grid.Row="1" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" x:Name="PciExpressPlotViewAnalysis" 
                                         Model="{Binding GpuAnalysisModel}" Tag="{Binding ElementName=PmdViewControl, Path=DataContext}" Margin="0 5 0 0"
										 MouseDoubleClick="ResetPciExpressChartAnalysis_MouseDoubleClick">
                                <controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                                    <ControlTemplate>
                                        <oxy:TrackerControl Position="{Binding Position}" Background="{DynamicResource MaterialDesignCardBackground}">
                                            <oxy:TrackerControl.Content>
                                                <TextBlock Text="{Binding}" Margin="5" />
                                            </oxy:TrackerControl.Content>
                                        </oxy:TrackerControl>
                                    </ControlTemplate>
                                </controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                            </controls:PlotViewCustomZoom>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="0 5 0 0" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                            <TextBlock Text="{Binding SessionCpuName, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" 
                                       FontWeight="Bold" FontSize="18"/>
                        </Grid>
                        <controls:PlotViewCustomZoom Grid.Row="1" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" x:Name="EPS12VPlotViewAnalysis" 
                                                     Model="{Binding CpuAnalysisModel}" Tag="{Binding ElementName=PmdViewControl, Path=DataContext}" Margin="0 5 0 2"
										             MouseDoubleClick="ResetEPS12VChartAnalysis_MouseDoubleClick">
                            <controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                                <ControlTemplate>
                                    <oxy:TrackerControl Position="{Binding Position}" Background="{DynamicResource MaterialDesignCardBackground}">
                                        <oxy:TrackerControl.Content>
                                            <TextBlock Text="{Binding}" Margin="5" />
                                        </oxy:TrackerControl.Content>
                                    </oxy:TrackerControl>
                                </ControlTemplate>
                            </controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                        </controls:PlotViewCustomZoom>
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="0" Visibility="{Binding DrawPerformanceChart, Converter={StaticResource TrueToVisibleConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="0 3 0 0" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                            <TextBlock Text="Performance" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False" 
                                       FontWeight="Bold" FontSize="18"/>
                        </Grid>
                        <controls:PlotViewCustomZoom Grid.Row="1" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" x:Name="FrametimeAnalysis"
                                                     Model="{Binding FrametimeModel}" Tag="{Binding ElementName=PmdViewControl, Path=DataContext}" Margin="0 5 0 2"
										             MouseDoubleClick="ResetFrametimeChart_MouseDoubleClick">
                            <controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                                <ControlTemplate>
                                    <oxy:TrackerControl Position="{Binding Position}" Background="{DynamicResource MaterialDesignCardBackground}">
                                        <oxy:TrackerControl.Content>
                                            <TextBlock Text="{Binding}" Margin="5" />
                                        </oxy:TrackerControl.Content>
                                    </oxy:TrackerControl>
                                </ControlTemplate>
                            </controls:PlotViewCustomZoom.DefaultTrackerTemplate>
                        </controls:PlotViewCustomZoom>
                        <ComboBox Grid.Row="1" Margin="10 0 0 10" HorizontalAlignment="Left" VerticalAlignment="Bottom" materialDesign:HintAssist.Hint="Values"
					                    materialDesign:HintAssist.IsFloating="True" MaxDropDownHeight="100" Width="80" Height="40">
                            <ComboBoxItem IsSelected="True">Frametimes</ComboBoxItem>
                            <ComboBoxItem>FPS</ComboBoxItem>
                            <ComboBox.Text>
                                <Binding Path="SelectedChartView"
						                    Mode="TwoWay"
						                    UpdateSourceTrigger="PropertyChanged">
                                </Binding>
                            </ComboBox.Text>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.RowSpan="3" Grid.Column="1" Margin="5 0 0 2" Background="{DynamicResource MaterialDesignTextFieldBoxBackground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="180"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Height="175" Margin="5 5 5 0" BorderThickness="0.2" BorderBrush="{DynamicResource MaterialDesignBody}"
                                VerticalAlignment="Top" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Margin="5 10 0 0" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Text="Graph Selection" ></TextBlock>
                                <CheckBox Margin="5 15 0 0" FontSize="13" Content="PMD Power" Background="DeepSkyBlue" IsChecked="{Binding DrawPmdPower}"></CheckBox>
                                <CheckBox Margin="5 15 0 0" FontSize="13" Content="Avg. PMD Power" Background="Purple" IsChecked="{Binding DrawAvgPmdPower}"></CheckBox>
                                <CheckBox Margin="5 15 0 0" FontSize="13" Content="Sensor Power" Background="Orange" IsChecked="{Binding DrawSensorPower}"></CheckBox>
                                <CheckBox Margin="5 15 0 0" FontSize="13" Content="Performance" Background="MediumSeaGreen" IsChecked="{Binding DrawPerformanceChart}" Checked = "FrametimeCheckBox_Checked" Unchecked = "FrametimeCheckBox_Unchecked"></CheckBox>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="2" Height="Auto" Margin="5 5 5 0" BorderThickness="0.2" BorderBrush="{DynamicResource MaterialDesignBody}"
                                VerticalAlignment="Top" HorizontalAlignment="Stretch">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
