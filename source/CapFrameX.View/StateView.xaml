<UserControl x:Class="CapFrameX.View.StateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:prism="http://prismlibrary.com/"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 xmlns:mvvm="clr-namespace:CapFrameX.MVVM.Converter;assembly=CapFrameX.MVVM"	
             xmlns:local="clr-namespace:CapFrameX.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
			 Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{StaticResource MaterialDesignFont}"
             prism:ViewModelLocator.AutoWireViewModel="True">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
				<ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Shadows.xaml" />
				<ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
				<ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DataGrid.xaml" />
				<ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Slider.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<mvvm:BoolToVisibilityConverter x:Key="FalseToCollapsedConverter" FalseValue="Collapsed" TrueValue="Visible"/>
            <mvvm:BoolToVisibilityConverter x:Key="TrueToCollapsedConverter" FalseValue="Visible" TrueValue="Collapsed"/>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid Background="#e6e6e6">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"></ColumnDefinition>
			<ColumnDefinition Width="1*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"
				   Visibility="{Binding IsUpdateAvailable, Converter={StaticResource FalseToCollapsedConverter}}">           
			<Hyperlink NavigateUri="https://github.com/DevTechProfile/CapFrameX/releases" RequestNavigate="Hyperlink_RequestNavigate">
				<TextBlock Text="{Binding Path=UpdateHyperlinkText}"/>
			</Hyperlink>	
		</TextBlock>
        <StackPanel HorizontalAlignment="Left" Grid.Column="0" Margin="10 0 0 0" Orientation="Horizontal">
            <TextBlock Margin="0 0 5 0" VerticalAlignment="Center">Capture Service:</TextBlock>
            <TextBlock Margin="0 0 20 0" VerticalAlignment="Center" Visibility="{Binding IsCaptureModeActive, Mode=OneWay,Converter={StaticResource TrueToCollapsedConverter}}" 
                       Text="Ready" FontWeight="Bold" Foreground="LimeGreen"></TextBlock>
            <TextBlock Margin="0 0 0 0" VerticalAlignment="Center" Visibility="{Binding IsCaptureModeActive, Mode=OneWay, Converter={StaticResource FalseToCollapsedConverter}}" 
                       Text="Capturing" FontWeight="Bold" Foreground="OrangeRed"></TextBlock>
            <TextBlock Margin="25 0 5 0" VerticalAlignment="Center">Overlay:</TextBlock>
            <TextBlock Margin="0 0 5 0" VerticalAlignment="Center" Visibility="{Binding IsOverlayActive, Mode=OneWay,Converter={StaticResource FalseToCollapsedConverter}}" 
                       Text="ON" FontWeight="Bold" Foreground="LimeGreen"></TextBlock>
            <TextBlock Margin="0 0 0 0" VerticalAlignment="Center" Visibility="{Binding IsOverlayActive, Mode=OneWay,Converter={StaticResource TrueToCollapsedConverter}}" 
                       Text="OFF" FontWeight="Bold" Foreground="OrangeRed"></TextBlock>
            <TextBlock Margin="25 0 5 0" VerticalAlignment="Center">Sensor logging:</TextBlock>
            <TextBlock Margin="0 0 5 0" VerticalAlignment="Center" Visibility="{Binding IsLoggingActive, Mode=OneWay,Converter={StaticResource FalseToCollapsedConverter}}" 
                       Text="ON" FontWeight="Bold" Foreground="LimeGreen"></TextBlock>
            <TextBlock Margin="0 0 0 0" VerticalAlignment="Center" Visibility="{Binding IsLoggingActive, Mode=OneWay,Converter={StaticResource TrueToCollapsedConverter}}" 
                       Text="OFF" FontWeight="Bold" Foreground="OrangeRed"></TextBlock>
            <TextBlock Margin="25 0 5 0" VerticalAlignment="Center">Directory observer:</TextBlock>
            <TextBlock Margin="0 0 5 0" VerticalAlignment="Center" Visibility="{Binding IsDirectoryObserving, Mode=OneWay,Converter={StaticResource FalseToCollapsedConverter}}" 
                       Text="Active" FontWeight="Bold" Foreground="LimeGreen"></TextBlock>
            <TextBlock Margin="0 0 5 0" VerticalAlignment="Center" Visibility="{Binding IsDirectoryObserving, Mode=OneWay,Converter={StaticResource TrueToCollapsedConverter}}" 
                       Text="Inactive" FontWeight="Bold" Foreground="OrangeRed"></TextBlock>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Grid.Column="1" Margin="0 0 10 0" Orientation="Horizontal">
			<materialDesign:PackIcon Kind="Information" VerticalAlignment="Center" />
			<TextBlock Margin="5 0 0 0" VerticalAlignment="Center">Version:</TextBlock>
			<TextBlock Margin="5 0 0 0" VerticalAlignment="Center" Text="{Binding VersionString, Mode=OneWay}"/>
		</StackPanel>
	</Grid>
</UserControl>
